extends App.pug
block content
    form.m-auto.w-full.max-w-lg.mt-24(method="post",action="/login")
      include ./components/Flash.pug    
      input(type="hidden", value=csrfToken, name="_csrf")
      .mb-6(class='md:flex md:items-center')
        .div(class='md:w-1/3')
          label.block.text-gray-500.font-bold.mb-1.pr-4(class='md:text-right md:mb-0' for='inline-email')
            | Email
        .div(class='md:w-2/3')
           input#inline-email.bg-gray-200.appearance-none.border-2.border-gray-200.rounded.w-full.py-2.px-4.text-gray-700.leading-tight(class='focus:outline-none focus:bg-white focus:border-blue-500' ,type='email' ,value='example@gmail.com', name="email")
      .mb-6(class='md:flex md:items-center')
        .div(class='md:w-1/3')
           label.block.text-gray-500.font-bold.mb-1.pr-4(class='md:text-right md:mb-0' for='inline-password')
            | Password
        .div(class='md:w-2/3')
           input#inline-password.bg-gray-200.appearance-none.border-2.border-gray-200.rounded.w-full.py-2.px-4.text-gray-700.leading-tight(class='focus:outline-none focus:bg-white focus:border-blue-500', type='password', placeholder='******************', name="password")
      .mb-6(class='md:flex md:items-center')
        .div(class='md:w-1/3')
        label.block.text-gray-500.font-bold(class='md:w-2/3')
           input.mr-2.leading-tight(type='checkbox')
           span.text-sm Send me your newsletter!
      .div(class='md:flex md:items-center')
        .div(class='md:w-1/3')
        .div(class='md:w-2/3')
          button.shadow.bg-blue-500.text-white.font-bold.py-2.px-4.rounded(class='hover:bg-blue-400 focus:shadow-outline focus:outline-none' type='submit') Sign In
