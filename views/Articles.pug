extends App.pug
block content
 each val in article
  .max-w-sm.pt-16.w-full(class='lg:max-w-full lg:flex')
    .border.border-gray-400.bg-white.rounded-b.p-4.flex.flex-col.justify-between.leading-normal
      .mb-4
        p.text-sm.text-gray-600.flex.items-center.pb-1
          i.fa.fa.fa-unlock
            |  Public Members
        a.text-gray-900.cursor-pointer.underline.font-bold.text-xl.mb-2(href=`/article/details?id=${val._id}`) #{val.title}
        p.text-gray-700.text-base
          | !{convertDeltaToHtml(JSON.parse(val.content)).split('.')[0]}
      .flex.items-center
        img.w-10.h-10.rounded-full.mr-4(src='https://avatars2.githubusercontent.com/u/37160072?s=460&u=c71c5201b5d65dfa121657b2ea817f472ad999f8&v=4' alt='Avatar of Jonathan Reinink')
        .text-sm
          p.text-gray-900.leading-none.capitalize #{val.userId.username}
          p.text-gray-600.pt-1 #{moment(val.userId.updatedAt).format("MMMM Do YYYY, h:mm:ss a")}
