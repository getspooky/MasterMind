extends App.pug
block content
 each val in article
  .max-w-sm.pt-16.w-full(class='lg:min-w-full lg:flex')
    .w-full.border.border-gray-400.bg-white.rounded-b.p-4.flex.flex-col.justify-between.leading-normal
      .mb-4
        p.text-sm.text-gray-600.flex.items-center.pb-1
          i.fa.fa.fa-unlock
            |  Public Members
        a.text-gray-900.cursor-pointer.underline.font-bold.text-xl.mb-2(href=`/article/details?id=${val._id}`) #{val.title}
        p.text-gray-700.text-base.pt-2
          | !{convertDeltaToHtml(JSON.parse(val.content)).substr(0,300)}...
          a.underline.text-blue-400(href=`/article/details?id=${val._id}`) learn more
      .flex.items-center.full-w.bg
        img.w-10.h-10.rounded-full.mr-4(src=`https://www.gravatar.com/avatar/${md5(val.userId.email)}?s=32&d=identicon&r=PG` alt='avatar')
        .text-sm
          p.text-gray-900.leading-none.capitalize #{val.userId.username}
          p.text-gray-600.pt-1 #{moment(val.userId.updatedAt).format("MMMM Do YYYY, h:mm:ss a")}
